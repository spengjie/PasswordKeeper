<Window x:Class="PasswordKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
        xmlns:local="clr-namespace:PasswordKeeper"
        x:Name="MainWD"
        Title="MainWindow"
        Icon="/PasswordKeeper;component/box_inverse.ico"
        Width="700" Height="470" MinWidth="200" MinHeight="400"
        Style="{DynamicResource CustomWindow}"
        FontSize="12" FontFamily="Segoe UI" Foreground="#FF444444"
        DataContext="{Binding}"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="MainWD_MouseLeftButtonDown" Loaded="MainWD_Loaded"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
</Window>